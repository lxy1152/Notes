#rightside
  position: fixed
  right: -38px
  bottom: $rightside-bottom
  z-index: 100
  opacity: 0
  transition: all .5s

  #rightside-config-hide
    transition: transform .4s
    transform: translate(35px, 0)

    &.show
      transform: translate(0, 0) !important

  & > div
    & > button,
    & > a
      display: block
      margin-bottom: 2px
      margin-right: 3px
      width: 30px
      height: 30px
      border: 1px solid rgba(150,150,150,0.15)
      border-radius: 40px
      color: #999999
      text-align: center
      font-size: 16px

      &:hover
        color: #58C9B9

  #mobile-toc-button
    display: none

    +maxWidth900()
      display: block

  +maxWidth900()
    #hide-aside-btn
      display: none
